<% layout("/layouts/boilerplate") %>
<style>
  /* Global Styles */
body {
  font-family: "Plus Jakarta Sans", sans-serif;
  background: linear-gradient(135deg, #e6f0ff, #f0f7ff); /* Soft Blue Gradient */
  color: #333;
  margin: 0;
  padding: 0;
}

.loan-details-container {
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.loan-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 2rem;
  text-align: center;
}

/* Vertical Cards */
.vertical-card {
  border: none !important;
  border-radius: 15px !important;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  background-color: white;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 1.5rem;
}

.vertical-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.vertical-card .card-img-top {
  width: 100%;
  height: 250px; /* Fixed height for the image */
  object-fit: cover; /* Ensures the image covers the area without distortion */
  transition: transform 0.3s ease;
}

.vertical-card:hover .card-img-top {
  transform: scale(1.05);
}

.vertical-card .card-body {
  padding: 1.5rem !important;
}

.vertical-card .card-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 1rem;
}

.vertical-card .card-text {
  font-size: 1rem;
  color: #555;
  line-height: 1.6;
}

.vertical-card .card-text i {
  margin-right: 0.5rem;
  color: #48b370; /* Light green */
}

.vertical-card .card-footer {
  background-color: white;
  border-top: 1px solid #e0e0e0;
  padding: 1rem;
}

/* Buttons */
.btn-dark {
  background-color: #2c3e50;
  border: none;
  border-radius: 8px;
  padding: 10px 20px;
  transition: all 0.3s ease;
}

.btn-dark:hover {
  background-color: #1e2a38;
  transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 768px) {
  .loan-title {
    font-size: 2rem;
  }

  .vertical-card .card-img-top {
    height: 200px; /* Adjusted height for smaller screens */
  }
}

@media (max-width: 576px) {
  .loan-title {
    font-size: 1.75rem;
  }

  .vertical-card .card-img-top {
    height: 150px; /* Adjusted height for mobile screens */
  }
}
</style>
<body>
  <div class="loan-details-container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3 class="loan-title">Loan Details: ðŸª™</h3>
        <div class="card vertical-card">
          <img
            src="<%= loan.image %>"
            class="card-img-top"
            alt="listing_image"
            loading="lazy"
            onerror="this.src='/images/placeholder.jpg';"
          />
          <div class="card-body">
            <h5 class="card-title">
              <%= loan.title.en %> | <%= loan.title.hi %>
            </h5>
            <p class="card-text">
              <i class="fas fa-rupee-sign"></i> <b>Loan Amount:</b> &#8377; <%= loan.amount %>
              <br />
              <i class="fas fa-university"></i> <b>Bank Name:</b> <%= loan.bankName %>
              <br />
              <i class="fas fa-percentage"></i> <b>Interest Rate:</b> <%= loan.interestRate %>
              <br />
              <i class="fas fa-clock"></i> <b>Duration:</b> <%= loan.duration %>
              <br />
              <i class="fas fa-globe"></i> <b>Bank Website:</b> <%= loan.bankWebsite %>
            </p>
            <p class="card-text">
              <b>Description:</b>
              <br />
              <%= loan.description.en %>
              <br />
              <%= loan.description.hi %>
            </p>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-between">
              <a href="/listing/<%= loan.id %>/edit" class="btn btn-dark">Apply</a>
              <form action="">
                <button class="btn btn-dark">Not Interested</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>