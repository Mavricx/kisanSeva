<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <b>Item Name:</b> <%= listing.itemName %>
          <br />
          <b>Price Per Kg:</b> &#8377; <%= listing.pricePerUnit %>
          <br />
          <b>Region:</b> <%= listing.region %>
          <br />
          <b>Minimum Order:</b> <%= listing.minOrder %>
        </p>
      </div>
      <div class="btns">
        <a
          href="/sells/<%= listing.id %>/edit"
          class="btn btn-dark col-1 offset-3 add-btn"
        >
          Edit
        </a>
        <form action="/sells/<%= listing.id %>?_method=DELETE" method="post">
          <button class="btn btn-dark offset-5">Delete</button>
        </form>
      </div>
    </div>
  </div>
</body>