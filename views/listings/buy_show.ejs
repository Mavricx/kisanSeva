<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Product Details:</h3>
    </div>
    <div class="card col" style="width: 20rem; text-align: center">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.productType %></b>
          <br />
          Price per kg: &#8377; <%= listing.pricePerKg %>
          <br />
          Farm Location: <%= listing.farmLocation %>
          <br />
          Product Quantity: <%= listing.productQuantity %>
          <br />
          Duration: <%= listing.duration %>
          <br />
          Contact Number: <%= listing.contactNumber %>
        </p>
      </div>
    </div>
    <br />
    <div class="btns">
      <a
        href="/buys/<%= listing.id %>/edit"
        class="btn btn-dark col-1 offset-3 add-btn"
      >
        Buy this product
      </a>
      <form action="/buys/<%= listing.id %>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-5">Not Interested</button>
      </form>
    </div>
  </div>
</body>
