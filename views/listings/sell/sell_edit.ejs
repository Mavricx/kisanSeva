<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3>Edit Your Product ðŸ“¦</h3>
        <form
          method="post"
          action="/sells/<%=sell.id%>?_method=PUT"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input
              type="text"
              name="sell[title][en]"
              class="form-control"
              value="<%=sell.title.en %>"
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea
              name="sell[description][en]"
              class="form-control"
              required
            >
<%= sell.description.en %></textarea
            >
            <div class="invalid-feedback">
              Write a short note about the spot
            </div>
          </div>
          <div class="mb-3">
            Original listing image:
            <br />
            <img
              src="<%=originalImageUrl %>"
              alt="listing image"
              class="img-thumbnail mt-2"
              style="max-width: 300px"
            />
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Upload New Image:</label>
            <input type="file" name="sell[image]" class="form-control" />
            <div class="valid-feedback">
              Default image will be placed in case of empty field
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Available Location:</label>
            <input
              type="text"
              name="sell[location]"
              class="form-control"
              value="<%=sell.location %>"
            />
          </div>
          <div class="mb-3 col-md-4">
            <label for="pricePerUnit" class="form-label">Price Per Unit:</label>
            <input
              type="number"
              name="sell[pricePerUnit]"
              placeholder="e.g: 2000"
              class="form-control"
              value="<%=sell.pricePerUnit %>"
              required
            />
          </div>
          <div class="mb-3 col-md-4">
            <label for="productQuantity" class="form-label"
              >Product Quantity:</label
            >
            <input
              type="number"
              name="sell[productQuantity]"
              placeholder="e.g: 100"
              class="form-control"
              value="<%=sell.productQuantity %>"
              required
            />
          </div>
          <div class="mb-3 col-md-4">
            <label for="ProductType" class="form-label">Product Type:</label>
            <select name="sell[productType]" class="form-control" required>
              <option value="<%=sell.productType %>" disabled selected>
                Select Product Type
              </option>
              <option value="crop">Crop</option>
              <option value="vegetables">Vegetables</option>
              <option value="fruits">Fruits</option>
              <option value="machinery">Machinery</option>
              <option value="seeds">Seeds</option>
              <option value="fertilizers">Fertilizers</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="minOrder" class="form-label"
              >Minimum Amount of Order:</label
            >
            <input
              type="text"
              name="sell[minOrder]"
              class="form-control"
              value="<%=sell.minOrder %>"
            />
          </div>
          <div class="mb-3">
            <label for="contactDetail" class="form-label"
              >Contact Detail (email/ph.no.):</label
            >
            <input
              type="text"
              name="sell[contactDetail]"
              class="form-control"
              value="<%=sell.contactDetail %>"
              required
            />
          </div>
          <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-dark">Update</button>
            <a href="/sells" class="btn btn-secondary">Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
