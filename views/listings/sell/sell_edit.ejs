
<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Edit Listing</h3>
      <form method="post" action="/sells/<%=sellItem.id%>?_method=PUT" enctype="multipart/form-data">
        <div class="md-3">
          <label for="title" class="form-label"> Title:</label>
          <input
            type="text"
            name="sellItem[title]"
            class="form-control"
            value="<%=sellItem.itemName %>"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <textarea
            name="sellItem[description]"
            class="form-control"
            value="<%= sellItem.description %>"
            required
          ></textarea>
          <div class="invalid-feedback">Write a short note about the spot</div>
        </div>

      
        <div class="mb-3">
          Original listing image:
          <br />
          <img
            src="<%=originalImageUrl %>"
            alt="listing image"
            class="img-thumbnail mt-2"
            style="max-width: 300px"
          />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"> Upload New Image:</label>
          <input type="file" name="sellItem[image]" class="form-control" />
          <div class="valid-feedback">
            Default image will be placed in case of empty field
          </div>
        </div>
        <div class="md-3">
          <label for="location" class="form-label">Available Location: </label>
          <input
          type="text"
            name="sellItem[location]"
            class="form-control"
            class="form-control"
          >
              <%=sellItem.location %></input
          >
        </div>
       
        <div class="mb-3 col-md-4">
          <label for="pricePerUnit" class="form-label">Price Per Unit:</label>
          <input
            type="number"
            name="sellItem[pricePerUnit]"
            placeholder="e.g: 2000"
            class="form-control"
            value="<%=sellItem.pricePerUnit %>"
            required
          />
        </div>

        <div class="mb-3 col-md-4">
          <label for="productQuantity" class="form-label"
            >Product Quantity:</label
          >
          <input
            type="number"
            name="sellItem[productQuantity]"
            placeholder="e.g: 100"
            class="form-control"
            value="<%=sellItem.productQuantity %>"
            required
          />
        </div>
        <div class="mb-3 col-md-4">
          <label for="ProductType" class="form-label">Product Type:</label>
          <select name="sellItem[productType]" class="form-control" required>
            <option value="<%=sellItem.productType %>" disabled selected>Select Product Type</option>
            <option value="crop">Crop</option>
            <option value="vegetables">Vegetables</option>
            <option value="fruits">Fruits</option>
            <option value="machinery">Machinery</option>
            <option value="seeds">Seeds</option>
            <option value="fertilizers">Fertilizers</option>
          </select>
        </div>
        <div class="md-3">
          <label for="minOrder" class="form-label">Minimum Amount of Order</label>
          <input
            type="text"
            name="sellItem[minOrder]"
            class="form-control"
            value="<%=sellItem.minOrder %>"
          />
        </div>
        <div class="mb-3 col-md-4">
          <label for="contactDetail" class="form-label"
            >Contact Detail(email/ph.no.):</label
          >
          <input
            type="text"
            name="sellItem[contactDetail]"
            value="<%=sellItem.contactDetail %>"
            class="form-control"
            required
          />
        </div>
        </div>
        <br /><br />
        <button type="submit" class="btn add-btn btn-sm">Update</button>
        <a href="/sells">
          <button class="btn add-btn">Back</button>
        </a>
      </form>
    </div>
  </div>
</body>
