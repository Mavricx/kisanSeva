<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Scheme Details: ðŸ“ƒ</h3>
    </div>
    <div class="card col" style="width: 20rem">
      <img
        src="<%= scheme.image%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%=scheme.schemeName %></b>
          <br />
          Description: &#8377; <%= scheme.description %>
          <br />
          <b>Organization:</b> <%= scheme.organization %>
          <br />
          Contact info: <%= scheme.contactInfo %>
        </p>
      </div>
    </div>
    <br />
    <div class="btns">
      <a
        href="/listing/<%=scheme.id%>/edit"
        class="btn btn-dark col-1 offset-3 add-btn"
      >
        Apply</a
      >
      <form action="/listing/<%=scheme.id%>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
</body>
