<% layout("/layouts/boilerplate") %>
<style>/* Global Styles */
  body {
    font-family: "Plus Jakarta Sans", sans-serif;
    background: linear-gradient(135deg, #e6f0ff, #f0f7ff); /* Soft Blue Gradient */
    color: #333;
    margin: 0;
    padding: 0;
  }
  
  .schemes-container {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .schemes-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  /* Horizontal Cards */
  .horizontal-card {
    border: none !important;
    border-radius: 15px !important;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 1.5rem;
  }
  
  .horizontal-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }
  
  .horizontal-card .card-img-top {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image covers the area without distortion */
    transition: transform 0.3s ease;
  }
  
  .horizontal-card:hover .card-img-top {
    transform: scale(1.05);
  }
  
  .horizontal-card .card-body {
    padding: 1.5rem !important;
  }
  
  .horizontal-card .card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 1rem;
  }
  
  .horizontal-card .card-text {
    font-size: 1rem;
    color: #555;
    line-height: 1.6;
  }
  
  .horizontal-card .card-text i {
    margin-right: 0.5rem;
    color: #48b370; /* Light green */
  }
  
  .scheme-link {
    text-decoration: none;
    color: inherit;
  }
  
  /* Fix for text underline on hover */
  .scheme-link:hover {
    text-decoration: none; /* Removes underline on hover */
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .schemes-title {
      font-size: 2rem;
    }
  
    .horizontal-card {
      flex-direction: column !important;
    }
  
    .horizontal-card .col-md-4 {
      width: 100%;
    }
  
    .horizontal-card .col-md-8 {
      width: 100%;
    }
  }
  
  @media (max-width: 576px) {
    .schemes-title {
      font-size: 1.75rem;
    }
  }</style>
<body>
  <div class="schemes-container">
    <h3 class="schemes-title">All The Schemes ðŸ“œ</h3>
    <div class="schemes-grid">
      <% for (let scheme of schemes){ %>
      <a class="scheme-link" href="/schemes/<%=scheme._id %>">
        <div class="card horizontal-card">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%=scheme.image %>"
                class="card-img-top"
                alt="scheme_image"
                loading="lazy"
                onerror="this.src='/images/placeholder.jpg';"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= scheme.schemeName.en %> | <%= scheme.schemeName.hi %>
                </h5>
                <p class="card-text">
                  <i class="fas fa-info-circle"></i> <b>Description:</b> <%= scheme.description.en %>
                  <br />
                  <i class="fas fa-building"></i> <b>Organization:</b> <%= scheme.organization %>
                  <br />
                  <i class="fas fa-phone-alt"></i> <b>Contact Info:</b> <%= scheme.contactInfo %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </div>
</body>