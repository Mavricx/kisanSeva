<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Scheme Details:</h3>
    </div>
    <div class="card col" style="width: 20rem">
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.scheme_name %></b>
          <br />
          Description: &#8377; <%= listing.description %>
          <br />
          Eligibility Criteria: <%= listing. eligibility %>
          <br />
          Target Beneficiaries: <%= listing.target_beneficiaries %>
          <br />
          Subsidy Percentage: <%= listing.subsidy_percentage %>
          <br />

          Contact info: <%= listing. contact_info %>
          
        </p>
      </div>
    </div>
    <br />
    <div class="btns">
      <a
        href="/listing/<%=listing.id%>/edit"
        class="btn btn-dark col-1 offset-3 add-btn"
      >
        Apply</a
      >
      <form action="/listing/<%=listing.id%>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
</body>
